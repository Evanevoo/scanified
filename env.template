# Gas Cylinder App - Environment Variables Template
# Copy this to .env.local for local development
# Set these in Netlify Dashboard for production

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration - Gmail (Working)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# Email Configuration - SMTP2GO (Alternative)
# SMTP2GO_USER=your_smtp2go_username
# SMTP2GO_PASSWORD=your_smtp2go_password
# SMTP2GO_FROM=your_smtp2go_email

# Email Configuration - Outlook (Alternative)
# OUTLOOK_USER=your_outlook_email
# OUTLOOK_PASSWORD=your_outlook_password
# OUTLOOK_FROM=your_outlook_email

# Option 3: SendGrid (Production)
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your-sendgrid-api-key
# EMAIL_FROM=noreply@yourdomain.com

# Contact Information
CONTACT_EMAIL=your_contact_email@domain.com
CONTACT_NAME=Your Business Name
CONTACT_PHONE=+1 (xxx) xxx-xxxx

# Owner Portal Email (for notifications)
VITE_OWNER_EMAIL=your-owner-email@domain.com

# SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_number

# Netlify Configuration
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_ACCESS_TOKEN=your_netlify_access_token

# Development Settings
NODE_ENV=development 